    <link rel="stylesheet" href="/UniversityManagementSystem/frontend/src/styles/registration.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>

<body>
    <!-- Navbar -->
    <header>
        <div class="navbar">
            <div class="logo">
                <a href="#"><img
                        src="/UniversityManagementSystem/frontend/public/images/WhatsApp_Image_2025-03-28_at_00.11.52_2b153dc5-removebg-preview.png"
                        width="60px" alt="University Logo"></a>
            </div>
            <ul class="links">
                <li><a href="./home.ejs">Home</a></li>
                <li><a href="./aboutus.ejs">About</a></li>
                <li><a href="./coursedetail.ejs">Courses</a></li>
                <li><a href="./Admission.ejs">Admissions</a></li>
                <li><a href="./Faculty.ejs">Faculty</a></li>
                <li><a href="./Contact Us.ejs">Contact</a></li>
            </ul>
            <!-- Login Button (Only in Main Navbar) -->
            <a href="./Student portal.ejs" class="action_btn">Login</a>
            <div class="toggle_btn">
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>

        <!-- Mobile Dropdown Menu (Without Login Button) -->
        <div class="dropdown_menu">
            <ul>
                <li><a href="./home.ejs">Home</a></li>
                <li><a href="./aboutus.ejs">About</a></li>
                <li><a href="./coursedetail.ejs">Courses</a></li>
                <li><a href="./Admission.ejs">Admissions</a></li>
                <li><a href="./Faculty.ejs">Faculty</a></li>
                <li><a href="./Contact Us.ejs">Contact</a></li>
                <li><a href="./Login.ejs" class="action_btn">Login</a></li>
            </ul>
        </div>
    </header>

    <div class="container">
        <h2>Register for EDUFLOW</h2>
        <form id="registrationForm">

            <!-- Role Selection -->
            <label for="role">Register as:</label>
            <select id="role" name="role">
                <option value="student">Student</option>
                <option value="faculty">Faculty</option>
            </select>

            <!-- Name -->
            <label for="name">Full Name:</label>
            <input type="text" id="name" name="name" required>

            <!-- Email -->
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <!-- Phone -->
            <label for="phone">Phone Number:</label>
            <input type="text" id="phone" name="phone" required>

            <!-- Password -->
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <!-- Department Selection (Only for Faculty) -->
            <div id="departmentField" style="display: none;">
                <label for="department">Department:</label>
                <select id="department" name="department">
                    <option value="Computer Science">Computer Science</option>
                    <option value="Mechanical Engineering">Mechanical Engineering</option>
                    <option value="Electrical Engineering">Electrical Engineering</option>
                </select>
            </div>

            <!-- Document Upload -->
            <label for="document">Upload ID Proof:</label>
            <input type="file" id="document" name="document" accept=".pdf, .jpg, .png" required>

            <!-- Submit Button -->
            <button type="submit">Register</button>

            <p>Already have an account? <a href="login.html">Login here</a></p>
        </form>
    </div>
    <!-- Footer -->
    <footer>
        <div class="footer-container">

            <!-- University Info -->
            <div class="footer-column">
                <h3>About University</h3>
                <p>Our university is committed to excellence in education, research, and innovation. Providing students
                    with the best academic environment.</p>
            </div>

            <!-- Quick Links -->
            <div class="footer-column">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="#">Admissions</a></li>
                    <li><a href="#">Academics</a></li>
                    <li><a href="#">Research</a></li>
                    <li><a href="#">Library</a></li>
                    <li><a href="#">Career Services</a></li>
                </ul>
            </div>

            <!-- Portals -->
            <div class="footer-column">
                <h3>University Portals</h3>
                <ul>
                    <li><a href="#">Student Portal</a></li>
                    <li><a href="#">Faculty Portal</a></li>
                    <li><a href="#">Alumni Portal</a></li>
                    <li><a href="#">Health & Wellness</a></li>
                    <li><a href="#">Hostel & Accommodation</a></li>
                </ul>
            </div>

            <!-- Contact Info -->
            <div class="footer-column">
                <h3>Contact Us</h3>
                <p><i class="fa-solid fa-location-dot"></i> 123 University Road, City, Country</p>
                <p><i class="fa-solid fa-phone"></i> +123-456-7890</p>
                <p><i class="fa-solid fa-envelope"></i> contact@university.edu</p>

                <!-- Social Media Links -->
                <div class="social-icons">
                    <a href="#"><i class="fa-brands fa-facebook"></i></a>
                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                </div>
            </div>

        </div>
        <!-- Inquiry Form -->
        <form class="footer-form">
            <input type="email" placeholder="Enter your email" required>
            <button type="submit">Subscribe</button>
        </form>
        </div>
        </div>

        <!-- Copyright -->
        <div class="footer-bottom">
            <p>&copy; 2025 University Management System. All rights reserved.</p>
        </div>
    </footer>


